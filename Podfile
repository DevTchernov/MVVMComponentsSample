source 'https://github.com/CocoaPods/Specs.git'
source 'http://gitlab.icerockdev.com/ios-framework/cocoapods-spec.git'
# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'mvvm_components' do
  project 'mvvm_components.xcodeproj'
  workspace 'mvvm_components.xcworkspace'
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for mvvm_components
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'IRDSwiftCoreModule'
  pod 'MBProgressHUD'
  pod 'ObservableArray-RxSwift'
  pod 'Diff'
end

target 'mvvm_netoptica' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  project 'mvvm_netoptica.xcodeproj'
  workspace 'mvvm_components.xcworkspace'
  use_frameworks!
  
  # Pods for mvvm_components
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'IRDSwiftCoreModule'
  pod 'MBProgressHUD'
  pod 'ObservableArray-RxSwift'
  pod 'Diff'
end
